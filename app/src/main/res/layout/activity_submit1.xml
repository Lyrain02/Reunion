<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/submit1"
    tools:context=".ui.submit.Submit1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/sun"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_submit1"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text="寻亲登记"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/toolbar" />



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/name"
            />

        <!--        <EditText-->

        <!--            android:layout_width="372dp"-->
        <!--            android:layout_height="35dp"-->
        <!--            android:background="@drawable/edit_text" />-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField1"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="姓名">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_submit1"
                />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/place"
            />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="96dp"
                android:layout_height="40dp"
                android:id="@+id/tv_btn"

                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/yellow_button"
                android:text="点击选择地址" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:layout_gravity="center_vertical"
                android:id="@+id/tv_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/edit_text"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="50dp"

            />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="选择地址" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField3"
                android:paddingLeft="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="详细地址">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_place_submit1"
                    />

            </com.google.android.material.textfield.TextInputLayout>





        </LinearLayout>








    </LinearLayout>
<!--选择失踪时间-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/time"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField4"
            android:paddingLeft="15dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="失踪日期">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date_submit1"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical"
            android:background="@color/black"
            android:layout_width="6dp"
            android:layout_height="1.5dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField6"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="失踪时间">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time_submit1"
                />

        </com.google.android.material.textfield.TextInputLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/age"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField8"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="年龄">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/age_submit1"
                />

        </com.google.android.material.textfield.TextInputLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/gender"
            />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="17dp"
                android:text="性别: "
                />
            <RadioButton
                android:layout_margin="10dp"
                android:id="@+id/radio_button_1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="男"/>
            <RadioButton
                android:layout_margin="10dp"
                android:id="@+id/radio_button_2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="女"/>
            <RadioButton
                android:layout_margin="10dp"
                android:id="@+id/radio_button_3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="未知"/>
        </RadioGroup>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/blood_type"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Spinner
            android:id="@+id/spinner_submit1"
            android:background="@drawable/edit_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/tall"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField9"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="身高">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tall_submit1"
                />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/shape"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField10"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="体型">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shape_submit1"
                />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/face"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField11"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterMaxLength="1000"
            app:counterEnabled="true"
            android:hint="相貌特征">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appearance_submit1"
                />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/else_info"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField12"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterMaxLength="1000"
            app:counterEnabled="true"
            android:hint="其他信息（生世，履历等）">

            <com.google.android.material.textfield.TextInputEditText
                android:maxLength="1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/else_info_submit1"
                />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:orientation="horizontal">

           <ImageView
               android:paddingTop="5dp"
               android:layout_width="40dp"
               android:layout_height="50dp"
               android:src="@drawable/picture"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_gravity="center"
               android:text="上传照片"
               android:textSize="18dp"
               />


       </LinearLayout>

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/send_recycler"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>







   </LinearLayout>
</ScrollView>
</LinearLayout>

